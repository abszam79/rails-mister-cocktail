<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path("Cocktails.jpg") %>');">
  <div class="banner-content">
    <h1>Serious Cocktailers</h1>
    <p>Learn to drink, change cocktails</p>
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="formulaire">

      <%= simple_form_for @cocktail, html: {class: 'form-inline'} do |f| %>
        <%= f.error_notification %>

        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit %>
      <% end %>
<br /><br />

    </div>
  </div>
</div>
