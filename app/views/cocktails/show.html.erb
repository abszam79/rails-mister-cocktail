<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1>Le Wagon Berlin</h1>
    <p>Learn to code with us in Berlin</p>
    <a class="btn btn-primary btn-lg">Start now</a>
  </div>
</div>



<div class="container">
  <div class="row">
    <h2><%= @cocktail.name %></h2>
    <div class="box">

    <p><% @cocktail.doses.each do |dose| %></p>
    <%= dose.description %>
    <%= dose.ingredient.name %>

     <%= link_to ' <i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>

    <% end %>
   </div>

    <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>
    <%= link_to "Back to list", cocktails_path %>

  </div>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, collection: Ingredient.all.order('name ASC') %>
  <%= f.button :submit %>
<% end %>

</div>
